{
  "name": "node-express-template",
  "version": "1.0.0",
  "description": "This is the template repository which follows clean architecture practices in the nodejs ecosystem",
  "main": "build/index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext ts",
    "lint:fix": "eslint --ignore-path .gitignore . --ext ts --fix",
    "prettier": "prettier --ignore-path .gitignore --config .prettierrc.yml \"src/**/*.+(ts|json)\"",
    "format": "npm run prettier -- --write",
    "format:check": "npm run prettier -- --list-different",
    "dev": "NODE_ENV=development nodemon",
    "build": "tsc",
    "build:check": "tsc --noEmit",
    "start": "NODE_ENV=production node -r ts-node/register/transpile-only -r tsconfig-paths/register .",
    "validate": "npm-run-all --parallel format:check lint test build:check",
    "setup": "npm install && npm run validate"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run validate"
    }
  },
  "author": "Utkarsh Srivastava",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.10",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "eslint": "^7.11.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.5.3",
    "nodemon": "^2.0.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "winston": "^3.3.3"
  }
}
